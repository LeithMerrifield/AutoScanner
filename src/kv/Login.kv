#:kivy 2.1.0
<LoginScreen>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [10,10,10,10]
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            padding: [10,10,10,10]
            spacing: 10
            Button:
                text: 'Settings'
                size_hint_x: .2
                on_press: root.show_settings()
            Label:
                text: 'Username'
                font_size: 28
                color: (1,1,1)
                size_hint_x: .6
                #text_size: root.width-20, 20
            Label:
                size_hint_x: .2

        TextInput:
            id: username
            multiline:False
            font_size: 28
            write_tab:False
            size_hint_y: .1
        Label:
            size_hint_y: .05

        Label:
            text: 'Password'
            #color: (159/255,183/255,224/255) darker blue
            color: (1,1,1)
            font_size: 28
            #text_size: root.width-20, 20
            size_hint_y: .1

        TextInput:
            id: password
            multiline:False
            write_tab:False
            password:True
            font_size: 28
            size_hint_y: .1
        Label:
            size_hint_y: .2

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: .1
            padding: [20,10,10,10]
            Label:
            Label:
                text: "Remember Username"
                font_size: 24
            CheckBox:
                id: login_checkbox
                active: False
        Button:
            text: 'Login'
            font_size: 24
            on_press: root.do_login()
            size_hint_y: .2


<ScannerScreen>:
    BoxLayout:
        id: scanner_layout
        orientation: 'vertical'
        padding: [10,10,10,10]
        spacing: 10
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            padding: [10,10,10,10]
            spacing: 10
            Button:
                text: 'Settings'
                size_hint_x : .5
                on_press: root.show_settings()
            Label:
                size_hint_x : .4
            Label:
                text: 'Auto Picker'
                font_size: 32
            Image:
                id: status_image
                source: app.path + '/src/images/StatusRed.png'
                size: self.texture_size
        TextInput:
            id: order_input
            multiline: False
            write_tab: False
            font_size: 28
            size_hint_y: 0.1
        BackgroundLabel:
            id: order_list
            size_hint_y: 0.7
            text: ""
            #background_color: 207/255, 240/255, 240/255, 1
            #valign: "top"
            #text_size: root.width, root.height
        BoxLayout:
            orientation:'horizontal'
            size_hint_y: 0.1
            #padding: [10,10,10,10]
            spacing: 10
            Button:
                text: 'Remove All'
                size_hint_x: 0.25
                on_press: root.do_remove_all()
            Button:
                text: 'Remove Last'
                size_hint_x: 0.25
                on_press: root.do_remove_last()
            Label:
                size_hint_x: 0.1
            Button:
                text: 'Pick'
                on_press: root.do_pick()
                size_hint_x: 0.4

<SettingsScreen>:
    BoxLayout:
        id: settings_layout
        orientation: 'vertical'
        padding: [10,10,10,10]
        spacing: 10
        Label:
            text: 'Settings'

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Setting 1"
            TextInput:

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Setting 2"
                size_hint_x: .7
            TextInput:
                size_hint_y: .5

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Setting 3"
            TextInput:

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Setting 4"
            TextInput:

        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Setting 5"
            TextInput:

        Button:
            text: "Save"
            on_press: root.save_and_return()



<BackgroundColor@Widget>:
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>:
    background_color: 0, 0, 0, 0
